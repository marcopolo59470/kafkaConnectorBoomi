<assembly>
    <id>car</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>META-INF</outputDirectory>
            <includes>
                <include>connector-config.xml</include>
                <include>connector-descriptor.xml</include>
            </includes>
            <directory>target/classes</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*.txt</include>
            </includes>
            <directory>target/conf</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>META-INF</outputDirectory>
            <includes>
                <include>MANIFEST.MF</include>
            </includes>
            <directory>${remote.resource.filtered.directory}</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>kerb*</include>
                <include>kafka*</include>
            </includes>
            <directory>lib</directory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>com.boomi.util:boomi-util</exclude>
                <exclude>*commons-logging*</exclude>
                <exclude>commons-codec*</exclude>
            </excludes>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>
</assembly>